  <h1>Editing Review #<%= @review.id %></h1>


<%= form_tag(review_url(@review), method: 'patch') do %>

  <div>
    <%= label_tag :review %><br />
    <%= text_area_tag :review, @review.review %>
  </div>

  <div>
    <%= label_tag :rating %><br />
    <%= number_field_tag :rating, @review.rating %>
  </div>


  <div>
    <%= submit_tag "Update Review" %>
  </div>

<% end %>
